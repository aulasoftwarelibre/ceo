{% extends "base.html.twig" %}

{% block body %}
    <h2 class="ui header">
        Actividades de Grupo
        <div class="sub header">{{ group.name }}</div>
    </h2>

    <div class="ui divider"></div>

    <div class="ui grid">
        {% for idea in ideas %}
            {% include('/frontend/idea/_idea.html.twig') %}
        {% else %}
            <div>No hay ideas :(</div>
        {% endfor %}
    </div>

    {% if ideas.haveToPaginate %}
        <div class="ui basic center aligned segment">
            <div class="ui pagination menu">
                {{ pagerfanta(ideas, 'semantic_ui_translated', {css_container_class: 'ui pagination menu', routeName: 'idea_group_index_paginated', routeParams: {'slug': group.slug}}) }}
            </div>
        </div>
    {% endif %}
{% endblock %}